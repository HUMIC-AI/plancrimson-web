rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /evaluations/{uid} {
      allow read: if request.auth != null;
    }

    match /suggestions/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
