{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "@types/jest"
    ],
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "**/*",
    "*.config.js"
  ],
  "exclude": [
    "build"
  ]
}
